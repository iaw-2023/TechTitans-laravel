{
    "openapi": "3.0.0",
    "info": {
        "title": "API Reserva de turnos",
        "description": "La API se podra usar para el manejo de turnos de un predio, en el que tendra varias categorias y canchas asociadas a estas. Ademas, se podra ver las reservas de los turnos y el detalle de las mismas.",
        "version": "1.0.0"
    },
    "paths": {
        "/rest/canchas": {
            "get": {
                "tags": [
                    "Canchas"
                ],
                "summary": "Obtener lista de canchas",
                "description": "Retorna una lista de todas las canchas existentes en el sistema.",
                "operationId": "579004ad55b8adcf56b5e484c40e250d",
                "responses": {
                    "200": {
                        "description": "Lista de canchas obtenida exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": "1"
                                            },
                                            "nombre": {
                                                "type": "string",
                                                "maxLength": 50,
                                                "example": "Nombre de la cancha",
                                                "nullable": true
                                            },
                                            "precio": {
                                                "type": "number",
                                                "format": "float",
                                                "example": "10.5",
                                                "nullable": true
                                            },
                                            "techo": {
                                                "type": "boolean",
                                                "example": true
                                            },
                                            "cant_jugadores": {
                                                "type": "integer",
                                                "example": 5,
                                                "nullable": true
                                            },
                                            "superficie": {
                                                "type": "string",
                                                "example": "Césped",
                                                "nullable": true
                                            },
                                            "id_categoria": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "activo": {
                                                "type": "boolean",
                                                "example": true
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
